{
  // Suggested configuration to get extension ESLint (dbaeumer.vscode-eslint) working.
  // https://marketplace.visualstudio.com/items?itemName=dbaeumer.vscode-eslint
  // By default this extension will only trigger for .js files, but not for .ts and .tsx.
  // Use eslint.validate to allow extension to process .ts and .tsx files.
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "eslint.alwaysShowStatus": true,
  "eslint.provideLintTask": false,
  "eslint.packageManager": "npm",
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.trace.server": "verbose",
  "eslint.autoFixOnSave": false,
  "eslint.codeAction.showDocumentation": {
      "enable": true
  },
  "eslint.options": {},
  "eslint.validate": [
      "javascript",
      // Validate .jsx files.
      "javascriptreact",
      // Validate .ts files.
      {
        "language": "typescript",
        "autoFix": true
      },
      // Validate .tsx files.
      {
        "language": "typescriptreact",
        "autoFix": true
      },
  ],
  "editor.rulers": [
    100
  ],
  "cSpell.words": [
    "tsbuildinfo",
    "typedoc"
  ],
}
